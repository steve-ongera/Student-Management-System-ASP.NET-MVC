@model IEnumerable<Ans_1.Models.Course>

@{
    ViewBag.Title = "Index";
}

<div style="width: 50%; float: left;">
    <table class="table table-sm">
        <tr>
            <th>
                Course Title
            </th>
            <th>
                <p class="d-flex justify-content-end">
                    <a class="btn btn-outline-primary" href="@Url.Action("Create","Courses")">Add New</a>
                </p>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CourseId }, new { @class = "btn btn-outline-success btn-sm" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.CourseId }, new { @class = "btn btn-outline-danger btn-sm" })
                </td>
            </tr>
        }
    </table>
</div>